{
  "configurations": {
    "cpptools": {
      "adapter": "vscode-cpptools",
      "configuration": {
        "request": "launch",
        "program": "${workspaceRoot}/a.out",
        "MIMode": "gdb",
        "args": ["< in1.txt"],
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ]
      }
    },
    "debugpy": {
      "adapter": "debugpy",
      "configuration": {
        "name": "<name>: Launch",
        "type": "python",
        "request": "launch",
        "cwd": "./",
        "python": "/usr/bin/python",
        "stopOnEntry": true,
        "uncaught": false,
        "console": "externalTerminal",
        "debugOptions": [],
        "program": "main.py"
      }
    }
  }
}
